---
import { Image } from "astro:assets";
import Services from "./Services.astro";
import CEOImage from "@assets/images/ceo.png";
---

<section class="hero">
  <div class="hero-content">
    <h1>Empowering Your Business Growth</h1>
    <p>Discover tailored strategies and expert insights to take your business to the next level. Let us help you navigate challenges and achieve sustainable success.</p>
    <button href="#0">Book a Meeting</button>
  </div>
  <Image src={CEOImage} alt="CEO" />

  <Services />
</section>

<style>
  /* Styles her */
  @layer components {
    .hero {
      grid-column: full;
      display: grid;
      grid-template-columns: subgrid;

      background-color: var(--secondary-color);
      position: relative;

      &::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        grid-row: 3/ 5;
        grid-column: full;
        background: white;
        z-index: 1;
        pointer-events: none;
      }
      img {
        grid-row: 1 / 3;
        grid-column: hero;
        place-self: stretch;
        object-fit: cover;
      }

      ul {
        grid-column: content;
        grid-row: 2 / 4;
        display: flex;
        gap: 1rem;
        z-index: 2;
      }

      .hero-content {
        grid-column: content-start / hero-start;
        grid-row: 1;
        padding-block: 5rem;
      }
      p {
        color: var(--primary-color);
        font-size: var(--str--1);
      }
    }
  }
</style>
