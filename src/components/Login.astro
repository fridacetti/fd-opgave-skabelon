<header><button popovertarget="pop">Login</button></header>

<aside id="pop" popover>
  <div>
    <h2>Login</h2>
    <form>
      <input type="email" placeholder="Email" />
      <input type="password" placeholder="Password" />
      <button type="submit">Login</button>
    </form>
    <p>Don't have an account? <a href="#">Register</a></p>
  </div>

  <style>
    button {
      display: flex;
      padding: 4px 16px;
      justify-content: center;
      align-items: center;
      gap: 10px;
      border-radius: 20px;
      background: var(--accent-color);
      color: var(--secondary-color);
      font-family: var(--text-font);
      font-size: 17.728px;
      font-style: normal;
      font-weight: 400;
      line-height: 28.365px;
    }
    ::backdrop {
      background: #0007;
    }
    [popover] {
      opacity: 0;
      translate: 0 -100%;
      transition: 0.6s;
      transition-property: opacity, display, overlay, translate;
      transition-behavior: allow-discrete;
    } /* :popover-open { opacity: 1; translate: 0 0; display: flex; padding: 80px 100px; flex-direction: column; justify-content: center; align-items: center; gap: 10px; @starting-style { opacity: 0; translate: 0 100%; } } */
  </style>
</aside>
