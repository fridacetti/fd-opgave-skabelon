---
import Section from "@layouts/Section.astro";
import { Image } from "astro:assets";
import Gridimg1 from "@assets/images/gridimg1.jpg";
import Gridimg2 from "@assets/images/gridimg2.jpg";
import Gridimg3 from "@assets/images/gridimg3.jpg";
import PHONE from "@icons/phone.svg";
import CLOCK from "@icons/clock.svg";
import PIN from "@icons/pin.svg";
import Text from "@layouts/Text.astro";
---

<Section>
  <article class="contact">
    <div>
      <Text eyebrow="Process" title="Contact Us. Itâ€™s Easy." desc="Leverage agile frameworks to provide a robust synopsis for high level overviews. Iterative approaches to corporate strategy foster collaborative." />

      <div class="contact-info">
        <div class="info-item">
          <PHONE class="icon call" />
          <div>
            <h4>Call Today</h4>
            <p>+1 800 100 900</p>
          </div>
        </div>
        <div class="info-item">
          <CLOCK class="icon clock" />
          <div>
            <h4>Monday To Friday</h4>
            <p>9AM - 5PM</p>
          </div>
        </div>
        <div class="info-item">
          <PIN class="icon pin" />
          <div>
            <h4>USA Office</h4>
            <p>195 Devonshire St Boston, MA 02110</p>
          </div>
        </div>
      </div>
    </div>

    <figure>
      <div class="images">
        <Image src={Gridimg1} alt="img" />
        <Image src={Gridimg2} alt="img" />
        <Image src={Gridimg3} alt="img" />
      </div>
    </figure>
  </article>
</Section>

<style>
  @layer components {
    .contact {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }
    .contact-info {
      grid-column: 1;
    }
    svg.icon {
      border-radius: 30px;
      width: 19px;
      height: 20px;
      padding: 10px;
      box-sizing: content-box;
      overflow: visible;
    }
    svg.icon.call {
      color: #deaa27;
      background-color: #ffecbb;
    }
    svg.icon.clock {
      color: #4eaf4e;
      background-color: #a4eda4;
    }
    svg.icon.pin {
      color: #181818;
      background-color: #eaeaea;
    }
  }
  .info-item {
    display: flex;
    gap: 10px;
    align-items: center;

    p {
      font-weight: 600;
    }
  }
  .images {
    display: grid;
    gap: 20px;

    :nth-child(1) {
      grid-column: 1;
      grid-row: 2/4;
      border-radius: 10px;
    }
    :nth-child(2) {
      grid-column: 2;
      grid-row: 2;
      border-radius: 10px;
    }
    :nth-child(3) {
      grid-column: 2;
      grid-row: 3;
      border-radius: 10px;
    }
  }
  :root {
    --square-pattern: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="red"><path d="M7.47662 4.02206C6.50635 3.05178 5.53232 2.07774 4.56205 1.10745C4.28482 0.83023 3.80905 0.83023 3.53183 1.10745C2.56155 2.07774 1.59128 3.04803 0.621002 4.02206C0.343781 4.29929 0.343781 4.77506 0.621002 5.05229C1.59128 6.02258 2.5653 6.99661 3.53558 7.9669C3.8128 8.24412 4.28857 8.24412 4.56579 7.9669C5.53607 6.99661 6.51009 6.02258 7.48037 5.05229C7.63022 4.90244 7.69016 4.73011 7.69016 4.56527C7.69016 4.55403 7.69016 4.54654 7.69016 4.5353C7.69016 4.52781 7.69016 4.51657 7.69016 4.50908C7.69016 4.34424 7.63022 4.17191 7.47662 4.02206ZM4.04881 6.41968C3.41944 5.79031 2.79382 5.16468 2.16445 4.5353C2.79382 3.90593 3.41944 3.2803 4.04881 2.65092C4.67818 3.2803 5.3038 3.90593 5.93317 4.5353C5.3038 5.16468 4.67818 5.79031 4.04881 6.41968Z"/></svg>');
  }

  figure {
    position: relative;

    &::before {
      --square-count: 10;
      --square-size: 1.34rem;

      --_square-size: var(--square-size, 1rem);
      --_square-half: calc(var(--square-size) / 2);
      --_square-sum: calc(var(--square-count) * var(--square-size));
      z-index: -1;
      content: "";
      position: absolute;
      inset: -30px -30px auto auto;
      /*inline-size: calc(var(--square-count) * 1.34rem - .67rem);*/
      inline-size: calc(round(var(--_square-sum), var(--_square-size)) - var(--_square-half));
      aspect-ratio: 1;
      background: linear-gradient(135deg, #be965d, #976f40, #c99b61, #f0be7b, #ffcb85, #eebc79, #c0935b, #976f40) 0 0 / 100% 100%;
      mask:
        var(--square-pattern) 0 0 / var(--_square-size) var(--_square-size),
        var(--square-pattern) var(--_square-half) var(--_square-half) / var(--_square-size) var(--_square-size);
      /*clip-path: polygon(-3% 0%, 100% 0%, 100% 103%);*/
    }

    &::after {
      content: "";
      position: absolute;
      left: -1rem;
      bottom: -2rem;
      background: green;
      width: 190px;
      height: 100px;
      border-radius: 10px;
      z-index: -1;
    }
  }

  @layer {
    body {
      min-height: 100svh;
      font-family: system-ui, sans-serif;
      display: grid;
      place-content: center;
    }
  }
</style>
