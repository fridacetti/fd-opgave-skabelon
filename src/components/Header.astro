---
import Logo from "@components/Logo.astro";
import Login from "@components/Login.astro";
---

<header>
  <nav>
    <Logo />
    <ul class="menu">
      <li><a href="/">Home</a></li>
      <li><a href="case">Case Study</a></li>
      <li><a href="team">Team</a></li>
      <li><a href="about">About</a></li>
    </ul>
    <div class="burger">
      <div class="line"></div>
      <div class="line"></div>
      <div class="line"></div>
    </div>
    <Login />
  </nav>
</header>

<style>
  @layer components {
    header {
      grid-column: full;
      display: grid;
      grid-template-columns: subgrid;
      padding: 38px;
      justify-content: space-between;
      align-items: flex-start;
      background: rgba(27, 27, 27, 0.91);
      backdrop-filter: blur(10.5px);

      nav {
        grid-column: content;
        display: flex;
        justify-content: space-between;
        align-items: center;

        > * {
          flex-shrink: 0;
        }
      }

      li > a {
        color: var(--primary-color);
        font-family: var(--text-font);
        font-size: 17.728px;
        font-style: normal;
        font-weight: 400;
        line-height: 28.365px;
        text-decoration: none;
      }
      ul {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 30px;
        color: var(--primary-color);
        font-family: var(--text-font);
        font-size: 17.728px;
        font-style: normal;
        font-weight: 400;
        line-height: 28.365px;
        list-style: none;
      }
    }
  }
</style>
