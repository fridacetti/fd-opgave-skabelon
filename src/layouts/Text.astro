---
const { title, desc, eyebrow } = Astro.props;
---

<header>
  {eyebrow && <p class="eyebrow">{eyebrow}</p>}
  <h1 class="heading">{title}</h1>
  <p class="description">{desc}</p>
</header>

<style>
  @layer components {
    header {
      text-align: left;
      margin-inline: auto;
      max-width: 60ch;
    }

    .eyebrow {
      font-family: var(--text-font);
      font-size: var(--str--1);
      font-weight: 400;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: #181818;
      margin-block-end: var(--space-xs);
    }

    .heading {
      font-family: var(--heading-font);
      font-size: var(--str-3);
      font-weight: 700;
      line-height: 1.2;
      color: #181818;
      margin-block-end: var(--space-xs);
    }

    .description {
      font-family: var(--text-font);
      font-size: var(--str-0);
      font-weight: 400;
      line-height: 1.5;
      color: #595566;
      margin-block-start: var(--space-xs);
    }
  }
</style>
